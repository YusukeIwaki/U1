<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
  <EditText
      android:id="@+id/time_input_editor_hour1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      style="@style/TimeInputLayout.EditText"
      android:nextFocusLeft="@+id/time_input_editor_hour1"
      android:nextFocusRight="@+id/time_input_editor_hour2"
      />
  <EditText
      android:id="@+id/time_input_editor_hour2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      style="@style/TimeInputLayout.EditText"
      android:nextFocusLeft="@+id/time_input_editor_hour1"
      android:nextFocusRight="@+id/time_input_editor_minute1"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="18dp"
      android:text=":"
      />
  <EditText
      android:id="@+id/time_input_editor_minute1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      style="@style/TimeInputLayout.EditText"
      android:nextFocusLeft="@+id/time_input_editor_hour2"
      android:nextFocusRight="@+id/time_input_editor_minute2"
      />
  <EditText
      android:id="@+id/time_input_editor_minute2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      style="@style/TimeInputLayout.EditText"
      android:nextFocusLeft="@+id/time_input_editor_minute1"
      android:nextFocusRight="@+id/time_input_editor_minute2"
      />
</merge>